@model IEnumerable<SistemaLavanderia.Core.Entities.Pedido>

@{
    ViewData["Title"] = "Meus Pedidos";
}

<h1>Meus Pedidos</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Você ainda não tem nenhum pedido.
        <a href="/Pedidos/Create" class="alert-link">Fazer um pedido agora</a>
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Pedido #</th>
                <th>Data</th>
                <th>Data Prevista</th>
                <th>Status</th>
                <th>Itens</th>
                <th>Valor Total</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pedido in Model)
            {
                <tr>
                    <td>@pedido.Id</td>
                    <td>@pedido.DataPedido.ToString("dd/MM/yyyy")</td>
                    <td>@(pedido.DataPrevistaEntrega?.ToString("dd/MM/yyyy") ?? "-")</td>
                    <td>
                        <span class="badge @(pedido.Status switch {
                            "Aguardando" => "bg-warning",
                            "Lavando" => "bg-info",
                            "Pronto" => "bg-success",
                            "Entregue" => "bg-secondary",
                            _ => "bg-primary"
                        })">@pedido.Status</span>
                    </td>
                    <td>@pedido.ItensPedido.Count itens</td>
                    <td>@pedido.ValorTotal.ToString("C")</td>
                    <td>
                        <a href="/Pedidos/Details/@pedido.Id" class="btn btn-sm btn-info">
                            <i class="fas fa-eye"></i> Detalhes
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}