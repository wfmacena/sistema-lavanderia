@model SistemaLavanderia.Core.Entities.Servico

@{
    ViewData["Title"] = "Editar Serviço";
}

<h1>Editar Serviço</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label">Nome do Serviço</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PrecoBase" class="control-label">Preço Base (R$)</label>
                <input asp-for="PrecoBase" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="PrecoBase" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="UnidadeMedida" class="control-label">Unidade de Medida</label>
                <select asp-for="UnidadeMedida" class="form-control">
                    <option value="Peça">Por Peça</option>
                    <option value="Kg">Por Quilo</option>
                    <option value="Conjunto">Conjunto</option>
                </select>
                <span asp-validation-for="UnidadeMedida" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}